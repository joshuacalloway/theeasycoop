# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /start                      controllers.Application.start

GET     /items 		    controllers.ItemController.list
POST    /items		    controllers.ItemController.saveItem
GET    	/items/new     	    controllers.ItemController.newItem
GET     /items/:id 		    controllers.ItemController.showItem(id: Long)

GET     /items/:id/edit         controllers.ItemController.editItem(id:Long)
GET     /items/:id/update       controllers.ItemController.updateItem(id:Long)


GET     /itemorders 		    controllers.ItemOrderController.list
POST    /itemorders     		    controllers.ItemOrderController.saveItem
GET     /itemorders/new 		    controllers.ItemOrderController.newItem
GET     /itemorders/:id/edit         controllers.ItemOrderController.editItem(id:Long)
GET     /itemorders/:id/update       controllers.ItemOrderController.updateItem(id:Long)

GET     /itemorders/:id                 controllers.ItemOrderController.showItem(id:Long)


GET     /members                    controllers.MemberController.list
POST    /members                    controllers.MemberController.saveItem
GET     /members/new 		    controllers.MemberController.newItem
POST    /members/:id/delete         controllers.MemberController.deleteItem(id:Long)
GET     /members/:id/edit           controllers.MemberController.editItem(id:Long)
GET     /members/:id/update         controllers.MemberController.updateItem(id:Long)
GET     /members/:id                controllers.MemberController.showItem(id:Long)

GET     /coops 			    controllers.CoopController.list
GET     /coops/ 		    controllers.CoopController.list
GET     /coops/new 		    controllers.CoopController.newItem
POST    /coops     		    controllers.CoopController.saveItem
GET     /coops/:id/edit             controllers.CoopController.editItem(id:Long)
GET     /coops/:id/update           controllers.CoopController.updateItem(id:Long)



# Authentication
GET     /login                              actions.LoginAction.login
POST    /login                              actions.LoginAction.authenticate
GET     /logout                             actions.LoginAction.logout

GET     /coops/:id 	            controllers.CoopController.showItem(id: Long)
GET     /coops/:id/members          actions.ListMembersByCoopAction.members(id: Long)
GET     /coops/:id/members/         actions.ListMembersByCoopAction.members(id: Long)
GET     /coops/:id/members/new      actions.AddMemberToCoopAction.actionForm(id: Long)
POST    /coops/:id/members          actions.AddMemberToCoopAction.submitForm(id: Long)

GET     /coops/:coopID/members/:id  actions.ShowMemberInCoopAction.showItem(coopID:Long, id:Long)

GET     /coops/:id/itemorders   actions.ListItemOrdersByCoopAction.listByCoop(id: Long)
GET     /coops/:id/itemorders/   actions.ListItemOrdersByCoopAction.listByCoop(id: Long)

POST    /coops/:id/itemorders     		    actions.AddItemOrderToCoopAction.saveItemByCoop(id: Long)
GET     /coops/:id/itemorders/new 		    actions.AddItemOrderToCoopAction.newItemByCoop(id: Long)

GET     /coops/:coopID/itemorders/:id  actions.ShowItemOrderInCoopAction.showItem(coopID:Long, id:Long)

GET     /coops/:coopID/itemorders/:id/edit         actions.EditItemOrderInCoopAction.editItem(coopID:Long, id:Long)
GET     /coops/:coopID/itemorders/:id/update       actions.EditItemOrderInCoopAction.updateItem(coopID:Long, id:Long)

GET     /coops/:coopID/itemorders/:id/members      actions.ListMembersInItemOrderInCoopAction.list(coopID:Long, id:Long)
GET     /coops/:coopID/itemorders/:id/members/new      actions.AddMemberToItemOrderInCoopAction.actionForm(coopID:Long, id: Long)
POST    /coops/:coopID/itemorders/:id/members          actions.AddMemberToItemOrderInCoopAction.submitForm(coopID:Long, id: Long)


GET    /manage			  controllers.CoopController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
