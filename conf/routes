# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /start                      controllers.Application.start

# Authentication
GET     /login                              actions.LoginAction.login
POST    /login                              actions.LoginAction.authenticate
GET     /logout                             actions.LoginAction.logout


GET     /bulkitems 		    controllers.BulkitemController.list
POST    /bulkitems     		    controllers.BulkitemController.saveItem
GET    	/bulkitems/new     	    controllers.BulkitemController.newItem
GET     /bulkitems/:id 		    controllers.BulkitemController.showItem(id: Long)

GET     /bulkitems/:id/edit         controllers.BulkitemController.editItem(id:Long)
GET     /bulkitems/:id/update       controllers.BulkitemController.updateItem(id:Long)


GET     /bulkitemorders 		    controllers.BulkitemOrderController.list
POST    /bulkitemorders     		    controllers.BulkitemOrderController.saveItem
GET     /bulkitemorders/new 		    controllers.BulkitemOrderController.newItem
GET     /bulkitemorders/:id                 controllers.BulkitemOrderController.showItem(id:Long)

GET     /members                    controllers.MemberController.list
POST    /members                    controllers.MemberController.saveItem
GET     /members/new 		    controllers.MemberController.newItem
POST    /members/:id/delete         controllers.MemberController.deleteItem(id:Long)
GET     /members/:id/edit           controllers.MemberController.editItem(id:Long)
GET     /members/:id/update         controllers.MemberController.updateItem(id:Long)
GET     /members/:id                controllers.MemberController.showItem(id:Long)

GET     /coops 			    controllers.CoopController.list
GET     /coops/ 		    controllers.CoopController.list
GET     /coops/new 		    controllers.CoopController.newItem
POST    /coops     		    controllers.CoopController.saveItem
GET     /coops/:id/edit             controllers.CoopController.editItem(id:Long)
GET     /coops/:id/update           controllers.CoopController.updateItem(id:Long)


GET     /coops/:id 	            controllers.CoopController.showItem(id: Long)
GET     /coops/:id/members          actions.ListMembersByCoopAction.members(id: Long)
GET     /coops/:id/members/         actions.ListMembersByCoopAction.members(id: Long)
GET     /coops/:id/members/new      actions.AddMemberToCoopAction.actionForm(id: Long)
POST    /coops/:id/members          actions.AddMemberToCoopAction.submitForm(id: Long)

GET     /coops/:coopID/members/:id  actions.ShowMemberInCoopAction.showItem(coopID:Long, id:Long)

GET     /coops/:id/bulkitemorders   actions.ListBulkitemOrdersByCoopAction.listByCoop(id: Long)
GET     /coops/:id/bulkitemorders/   actions.ListBulkitemOrdersByCoopAction.listByCoop(id: Long)

POST    /coops/:id/bulkitemorders     		    actions.AddBulkitemOrderToCoopAction.saveItemByCoop(id: Long)
GET     /coops/:id/bulkitemorders/new 		    actions.AddBulkitemOrderToCoopAction.newItemByCoop(id: Long)

GET     /coops/:coopID/bulkitemorders/:id  actions.ShowBulkitemOrderInCoopAction.showItem(coopID:Long, id:Long)



GET    /manage			  controllers.CoopController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
