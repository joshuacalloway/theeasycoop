# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /start                      controllers.Application.start
GET     /coops 			    controllers.CoopController.list
GET     /coops/:id 	            controllers.CoopController.show(id: Long)
POST    /coops 			    controllers.Application.newCoop
GET     /members                    controllers.Application.members
GET     /members/:id                controllers.MemberController.show(id: Long)
POST    /members                  controllers.Application.newMember()
POST    /members/:id/delete       controllers.Application.deleteMember(id: Long)

GET    /manage			  controllers.CoopController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
