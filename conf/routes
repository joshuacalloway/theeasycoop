# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /start                      controllers.Application.start

GET     /bulkitems 		    controllers.BulkitemController.list
GET    	/bulkitems/new     	    controllers.BulkitemController.newRecord
GET     /bulkitems/:id 		    controllers.BulkitemController.show(id: Long)
POST    /bulkitems     		    controllers.BulkitemController.saveRecord

GET     /coops 			    controllers.CoopController.list
GET     /coops/new 		    controllers.CoopController.newRecord
POST    /coops     		    controllers.CoopController.saveRecord
GET     /coops/:id/edit             controllers.CoopController.editRecord(id:Long)
GET     /coops/:id/update           controllers.CoopController.updateRecord(id:Long)


GET     /coops/:id 	            controllers.CoopController.showRecord(id: Long)
GET     /coops/:id/members          controllers.CoopController.members(id: Long)
GET     /coops/:id/members/new      controllers.CoopController.newMember(id: Long)
POST    /coops/:id/members          controllers.CoopController.saveMember(id: Long)


GET     /members                    controllers.Application.members
GET     /members/:id                controllers.MemberController.show(id: Long)
POST    /members                  controllers.Application.newMember()
POST    /members/:id/delete       controllers.Application.deleteMember(id: Long)

GET    /manage			  controllers.CoopController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
